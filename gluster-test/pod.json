{
    "apiVersion": "v1",
    "kind": "Pod",
    "metadata": {
        "name": "glusterfs"
    },
    "spec": {
        "containers": [
            {
                "name": "glusterfs",
                "image": "tf-1:5000/tf-hdfs-gfs:1.0",
                "command": ["sleep", "3600"],
                "securityContext": {
                    "privileged": true
                },
                "volumeMounts": [
                    {
                        "mountPath": "/mnt",
                        "name": "glusterfsvol"
                    }
                ]
            }
        ],
        "volumes": [
            {
                "name": "glusterfsvol",
                "glusterfs": {
                    "endpoints": "glusterfs-cluster",
                    "path": "gv1"
                }
            }
        ]
    }
}

